            background-color: #333;
        }
    
        .nav1 ul li {
            float: left;
        }
    
        .nav1 ul li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
    
        .nav1 ul li a:hover:not(.active1) {
            background-color: #111;
        }
    
        .active1 {
            background-color: #04AA6D;
        }
    
        /* Responsive styles */
        @media screen and (max-width: 600px) {
            .nav1 li {
                float: none;
                display: inline-block;
            }
    
            .nav1 li a {
                display: block;
                text-align: left;
            }
    
            .nav1 {
